<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/tankuang_shangchuanzhaopian"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_dialogPic_photo"
            android:drawableLeft="@drawable/zhaoxiangji"
            android:text="拍照上传"
            android:gravity="center_vertical"
            android:textColor="@color/tc6"
            android:textSize="14sp"
            android:drawablePadding="20dp"
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView

            android:background="@color/line_c"
            android:layout_marginLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <TextView
            android:id="@+id/tv_dialogPic_album"
            android:drawableLeft="@drawable/xiangce"
            android:text="从相册选择"
            android:gravity="center_vertical"
            android:textColor="@color/tc6"
            android:textSize="14sp"
            android:drawablePadding="20dp"
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>