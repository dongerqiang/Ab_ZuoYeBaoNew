<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/title_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <FrameLayout
            android:layout_marginTop="20dp"
            android:layout_width="85dp"
            android:layout_height="85dp"
            >

            <ImageView
                android:src="@drawable/head85"
                android:layout_width="85dp"
                android:layout_height="85dp"
                />
            <ImageView
                android:visibility="visible"
                android:src="@drawable/default_head"
                android:layout_gravity="center"
                android:id="@+id/iv_minefgmT_head"
                android:layout_width="81dp"
                android:layout_height="81dp"
                />

        </FrameLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_minefgmT_name"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/home_content_bg"
                android:textSize="14sp" />

            <TextView
                android:text=""
                android:id="@+id/tv_minefgmT_lvl"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/home_content_bg"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <LinearLayout
            android:id="@+id/ll_minefgmT_money"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/biaoqian2"
                android:text="本月收益"
                android:textColor="@color/tc3"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_minefgmT_money"
                    android:text="0"
                    android:textColor="@color/mine_tc_s"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="元"
                    android:textColor="@color/tc3"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/line_v"/>


        <LinearLayout
            android:id="@+id/ll_minefgmT_mineStar"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/xingxing"
                android:text="我的星级"
                android:textColor="@color/tc3"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_minefgmT_mineStar"
                    android:text="0"
                    android:textColor="@color/mine_tc_s"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="星"
                    android:textColor="@color/tc3"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/line_h"
        android:layout_height="15dp"
        android:background="@color/content_bg"/>

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:drawableLeft="@drawable/dingdan"
            android:drawablePadding="15dp"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:id="@+id/tv_minefgmT_mineList"
            android:text="我的订单"
            android:textColor="@color/tc3"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <View
            style="@style/line_h"
            android:layout_marginLeft="20dp"
            android:background="@color/line_c"/>

        <TextView
            android:drawableLeft="@drawable/xiaoxi2"
            android:drawablePadding="15dp"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:id="@+id/tv_minefgmT_mineMsg"
            android:text="我的消息"
            android:textColor="@color/tc3"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <View
            style="@style/line_h"
            android:layout_marginLeft="20dp"
            android:background="@color/line_c"/>



        <TextView
            android:drawableLeft="@drawable/setting"
            android:drawablePadding="15dp"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:id="@+id/tv_minefgmT_setting"
            android:text="设置"
            android:textColor="@color/tc3"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />


        <TextView
            android:background="@color/home_content_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>