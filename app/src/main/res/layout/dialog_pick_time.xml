<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:su="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <TextView
        android:textColor="@color/title_tc"
        android:id="@+id/tv_dialogTime_ok"
        android:text="确定"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@color/title_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <LinearLayout
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <com.ourslook.zuoyeba.view.ScrollerNumberPicker
            android:id="@+id/pick_dialogTime_date"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"


            su:itemNumber="3"
            su:lineCoulor="@color/title_tc"
            su:maskHight="60dp"
            su:noEmpty="true"
            su:normalTextColor="@color/tc9"
            su:normalTextSize="13sp"
            su:selecredTextColor="@color/tc3"
            su:selecredTextSize="16sp"
            su:unitHight="45dp"/>

        <com.ourslook.zuoyeba.view.ScrollerNumberPicker
            android:id="@+id/pick_dialogTime_hour"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            su:itemNumber="3"
            su:lineCoulor="@color/title_tc"
            su:maskHight="60dp"
            su:noEmpty="true"
            su:normalTextColor="@color/tc9"
            su:normalTextSize="13sp"
            su:selecredTextColor="@color/tc3"
            su:selecredTextSize="16sp"
            su:unitHight="45dp"/>

        <TextView
            android:id="@+id/tv_maohao"
            android:text=":"
            android:textColor="@color/tc3"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.ourslook.zuoyeba.view.ScrollerNumberPicker
            android:id="@+id/pick_dialogTime_minute"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            su:itemNumber="3"
            su:lineCoulor="@color/title_tc"
            su:maskHight="60dp"
            su:noEmpty="true"
            su:normalTextColor="@color/tc9"
            su:normalTextSize="13sp"
            su:selecredTextColor="@color/tc3"
            su:selecredTextSize="16sp"
            su:unitHight="45dp"/>

    </LinearLayout>


</LinearLayout>