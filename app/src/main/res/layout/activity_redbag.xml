<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_width"
        android:background="#c03535">

        <ImageView
            android:id="@+id/iv_myRedAty_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="center"

            android:src="@drawable/arrow4_xhdpi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="我的红包"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/gb_hongbao">

        <FrameLayout
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/head85" />

            <ImageView
                android:id="@+id/iv_myRedAty_head"
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:layout_gravity="center"
                android:src="@drawable/default_head" />

        </FrameLayout>


    </RelativeLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="11dp">

        <in.srain.cube.views.ptr.PtrClassicFrameLayout
            android:id="@+id/ptr_red_bage_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <ListView

                android:id="@+id/lv_myRedAty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

            </ListView>
        </in.srain.cube.views.ptr.PtrClassicFrameLayout>


        <RelativeLayout
            android:id="@+id/view_myRedAty_noRed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="16dp"
                android:drawableTop="@drawable/wuhongbao"
                android:gravity="center_horizontal"
                android:text="你暂时还没有红包哦~\n每消费100元即可获得10元红包"
                android:textColor="@color/tc9"
                android:textSize="15sp" />
        </RelativeLayout>

    </FrameLayout>

</LinearLayout>