<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="11dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="50dp">

            <TextView
                android:textSize="14sp"
                android:textColor="@color/tc3"
                android:text="原手机号"
                android:layout_width="70dp"
                android:layout_height="wrap_content" />

            <EditText
                android:maxLength="11"
                android:inputType="number"
                android:background="@null"
                android:id="@+id/et_changePhoneAty_pNum"
                android:textSize="14sp"
                android:hint="请输入原手机号"
                android:textColorHint="@color/tc9"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>



        <View
            style="@style/line_h"
            android:background="@color/line_c"/>

        <LinearLayout
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="50dp">

            <TextView
                android:textSize="14sp"
                android:textColor="@color/tc3"
                android:text="新手机号"
                android:layout_width="70dp"
                android:layout_height="wrap_content" />

            <EditText
                android:background="@null"
                android:id="@+id/et_changePhoneAty_newNum"
                android:textSize="14sp"
                android:hint="请输入新手机号"
                android:inputType="number"
                android:maxLength="11"
                android:textColorHint="@color/tc9"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


        <View
            style="@style/line_h"
            android:background="@color/line_c"/>

        <LinearLayout
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="50dp">

            <TextView
                android:textSize="14sp"
                android:textColor="@color/tc3"
                android:text="验证码"
                android:layout_width="70dp"
                android:layout_height="wrap_content" />

            <EditText
                android:maxLength="6"
                android:inputType="number"
                android:background="@null"
                android:id="@+id/et_changePhoneAty_code"
                android:textSize="14sp"
                android:hint="请输入验证码"
                android:textColorHint="@color/tc9"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_changePhoneAty_getCode"
                android:background="@drawable/yanzhma_orange"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="获取验证码"
                android:layout_width="80dp"
                android:layout_height="30dp" />

        </LinearLayout>





    </LinearLayout>



</LinearLayout>